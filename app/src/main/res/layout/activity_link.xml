<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:clipToPadding="false"
    android:overScrollMode="never"
    android:padding="@dimen/_24sdp"
    android:scrollbars="none"
    tools:context=".activities.LinkActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/goBack"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_28sdp"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_goback"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <LinearLayout
                android:layout_marginTop="@dimen/_120sdp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/goBack"
                app:layout_constraintBottom_toBottomOf="parent">

                <EditText
                    android:id="@+id/twitterInput"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="48dp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:background="@drawable/background_message1"
                    android:fontFamily="@font/rubik"
                    android:hint="@string/twitter"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="no"
                    android:inputType="textPersonName"
                    android:paddingStart="@dimen/_16sdp"
                    android:paddingEnd="@dimen/_16sdp"
                    android:textColorHint="@color/gray"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_13sdp"
                    tools:ignore="TextContrastCheck" />

                <EditText
                    android:id="@+id/openSeaInput"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="48dp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:background="@drawable/background_message1"
                    android:fontFamily="@font/rubik"
                    android:hint="@string/opensea"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="no"
                    android:inputType="textPersonName"
                    android:paddingStart="@dimen/_16sdp"
                    android:paddingEnd="@dimen/_16sdp"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/gray"
                    android:textSize="@dimen/_13sdp"
                    tools:ignore="TextContrastCheck" />

                <EditText
                    android:id="@+id/websiteInput"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="48dp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:background="@drawable/background_message1"
                    android:fontFamily="@font/rubik"
                    android:hint="@string/website"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="no"
                    android:inputType="textPersonName"
                    android:paddingStart="@dimen/_16sdp"
                    android:paddingEnd="@dimen/_16sdp"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/gray"
                    android:textSize="@dimen/_13sdp"
                    tools:ignore="TextContrastCheck" />

                <EditText
                    android:id="@+id/instagramInput"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="48dp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:background="@drawable/background_message1"
                    android:fontFamily="@font/rubik"
                    android:hint="@string/instagram"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="no"
                    android:inputType="textPersonName"
                    android:paddingStart="@dimen/_16sdp"
                    android:paddingEnd="@dimen/_16sdp"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/gray"
                    android:textSize="@dimen/_13sdp"
                    tools:ignore="TextContrastCheck" />

                <EditText
                    android:id="@+id/profileType"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="48dp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:background="@drawable/background_message1"
                    android:fontFamily="@font/rubik"
                    android:hint="@string/profile_type"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="no"
                    android:inputType="textPersonName"
                    android:paddingStart="@dimen/_16sdp"
                    android:paddingEnd="@dimen/_16sdp"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/gray"
                    android:textSize="@dimen/_13sdp"
                    tools:ignore="TextContrastCheck" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/submitButton"
                    android:layout_width="@dimen/_142sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:text="@string/submit"
                    android:backgroundTint="@color/message2"
                    android:textColor="@color/white"
                    app:cornerRadius="@dimen/_8sdp"/>

            </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>